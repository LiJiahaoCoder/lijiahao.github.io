{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["dom"],
    "jsx": "react",
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
